# RAG Demo - Environment Variables
# Copy to .env and add your API keys

# OpenAI API Key (for embeddings and LLM)
OPENAI_API_KEY=sk-************************

# Alternative: HuggingFace Token (for free embeddings)
HUGGINGFACE_TOKEN=hf_************************

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-3.5-turbo

# Debug
DEBUG=true
